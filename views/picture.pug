extends ./layout.pug

block content
    .container.intro(ng-controller="PictureController")
        .row
            h1 Picture of the Week
            .row(style="border: none")
              .col-sm-4(ng-repeat='item in filteredPictures')
                .photo
                  img(ng-src="static/{{item.image}}" class="img-responsive" alt="{{item.title}}")
                  a(href="static/{{item.image}}" data-imagelightbox="a")
                    .photo-overlay
                      h1 {{item.title}}
                      p  Week of: {{item.week}}
                      p  {{item.location}}, {{item.state}}
                      p(style="text-align: center") {{item.description}}
            .row.flex-container
              ul.flex-item(uib-pagination='', total-items='totalItems', ng-model='currentPage')
