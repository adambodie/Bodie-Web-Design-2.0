.container
  .flex-container
    .flex-item
      h2.section-heading Picture of the Week
       .photo
         img(src='../assets/{{image}}', alt='{{title}}')
         a(href='../assets/{{image}}' data-imagelightbox="a")
           .photo-overlay
              h2 {{title}}
              p Week of: {{week}}
              p Location: {{location}}, {{state}}
              p {{description}}
    .flex-item
      h2.section-heading Recent Updates
      .update
        ul
          li(*ngFor='let update of updates')
            p
              strong {{update.title}} 
              | - {{update.description}}     
