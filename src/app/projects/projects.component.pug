section#projects
  .container
      h2.section-heading Projects
     
      .filter
        div
          h3 Filter Projects
          .flex-container.edit
            div.options
              select((change)="filterList()")
                option(value="") Filter by Technology...
                option(*ngFor="let item of uniqueOptions") {{item}}
            div.button
              a.btn((click)="reset()") Reset
        div
          h3 Sort Projects
          .flex-container.sort
              a.btn((click)="sortByTitle()") Title: {{titleOrder}}
              a.btn((click)="sortByUpdatedDate()") Updated {{updateOrder}}
              a.btn((click)="sortByCreatedDate()") Created {{createOrder}}              
      div(*ngFor="let project of projects")
        div([class]="project.visible ? 'visible' : 'invisible'")
          .flex-container.project(*ngIf="project.visible")          
            .flex-item.links
              img(src='../assets/{{project.image}}', alt='{{project.alt}}')
              ul.languages
                li(*ngFor="let language of project.languages") {{language.name}}
            .flex-item.link-descriptions
              h2 {{project.title}}
              .description
                p
                  strong Created:
                  |  {{months[project.created.getMonth()]}} {{project.created.getDate()}}, {{project.created.getFullYear()}}
                p
                  strong Added:
                  |  {{project.createdAt}}
                br
                p
                  strong Updated:
                  |  {{months[project.updated.getMonth()]}} {{project.updated.getDate()}}, {{project.updated.getFullYear()}}
                p
                  strong Last Updated:
                  |  {{project.updatedAt}}
                br
                p.paragraph-description {{project.description}}
                h3
                  a.btn(href='http://{{project.link}}.bodiewebdesign.com', role='button') Check Me Out! &raquo;
